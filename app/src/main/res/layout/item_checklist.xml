<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/checkli_btn_checking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/checkli_img_check_circle" />

    <ImageView
        android:id="@+id/checkli_btn_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/checkli_img_checked_circle" />

    <ImageView
        android:id="@+id/checkli_btn_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/checkli_img_camera" />

    <TextView
        android:id="@+id/checkli_tv_checklist"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/pretendard_bold"
        android:lineSpacingExtra="2dp"
        android:text="체크리스트 내용"
        android:maxLines="4"
        android:textColor="@color/secondary"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/checkli_btn_checking"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/checkli_tv_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/pretendard_regular"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="16dp"
        android:text="이름님이 남기셨어요"
        android:textSize="12dp"
        android:textColor="@color/text_high"
        app:layout_constraintStart_toEndOf="@+id/checkli_btn_checking"
        app:layout_constraintTop_toBottomOf="@+id/checkli_tv_checklist" />

    <ImageView
        android:id="@+id/checkli_iv_photo"
        android:layout_width="287dp"
        android:layout_height="215dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkli_tv_writer"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
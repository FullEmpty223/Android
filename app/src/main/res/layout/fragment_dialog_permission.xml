<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_permission"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/dialog_back_selector"
    android:paddingHorizontal="24dp"
    android:paddingVertical="20dp">

    <TextView
        android:id="@+id/dialog_permission_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/font_pretendard_bold"
        android:gravity="center"
        android:maxWidth="320dp"
        android:text="내용"
        android:textColor="@color/text_high"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/dialog_permission_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_permission_tv">

        <Button
            android:id="@+id/dialog_confirm_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:backgroundTint="@color/background"
            android:fontFamily="@font/font_pretendard_bold"
            android:text="취소"
            android:textColor="@color/primary"
            android:textSize="14dp"
            app:shapeAppearance="@style/RoundButton"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/dialog_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/font_pretendard_bold"
            android:text="확인"
            android:textColor="@color/onPrimary"
            android:textSize="14dp"
            app:shapeAppearance="@style/RoundButton" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_permission"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_back_selector"
    android:paddingVertical="20dp"
    android:paddingHorizontal="24dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/dialog_permission_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/font_pretendard_bold"
        android:layout_marginTop="20dp"
        android:text="내용"
        android:textSize="20sp"
        android:maxWidth="320dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dialog_confirm_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_pretendard_bold"
        android:text="확인"
        android:textSize="14sp"
        android:textColor="@color/onPrimary"
        app:shapeAppearance="@style/RoundButton"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/dialog_permission_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_confirm_cancel_btn" />

    <Button
        android:id="@+id/dialog_confirm_cancel_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_pretendard_bold"
        android:text="취소"
        android:textSize="14sp"
        android:textColor="@color/onPrimary"
        app:shapeAppearance="@style/RoundButton"
        android:layout_marginTop="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_permission_tv"
        app:layout_constraintEnd_toStartOf="@+id/dialog_confirm_btn"/>



</androidx.constraintlayout.widget.ConstraintLayout>
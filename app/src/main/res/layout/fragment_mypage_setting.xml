<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/mypage_setting_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        app:title="사용자 설정"
        android:theme="@style/GalleryToolBar"
        app:titleTextColor="@color/text_high"
        app:titleCentered="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/mypage_setting_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_setting_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mypage_setting_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <ImageView
                android:id="@+id/mypage_setting_notification_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/mypage_notifications"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginVertical="22dp"/>

            <TextView
                android:id="@+id/mypage_setting_notification_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알림 설정"
                android:textSize="18sp"
                android:fontFamily="@font/font_pretendard_bold"
                android:textColor="@color/text_medium"
                app:layout_constraintStart_toEndOf="@+id/mypage_setting_notification_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="14dp"
                android:layout_marginVertical="22dp" />

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/mypage_goto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="14dp"
                android:layout_marginVertical="22dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mypage_setting_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mypage_setting_logout_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/mypage_logout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginVertical="22dp"/>

            <TextView
                android:id="@+id/mypage_setting_logout_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:textSize="18sp"
                android:fontFamily="@font/font_pretendard_bold"
                android:textColor="@color/text_medium"
                app:layout_constraintStart_toEndOf="@+id/mypage_setting_logout_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="14dp"
                android:layout_marginVertical="22dp" />

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/mypage_goto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="14dp"
                android:layout_marginVertical="22dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mypage_setting_leave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mypage_setting_leave_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/mypage_waving_hand"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginVertical="22dp"/>

            <TextView
                android:id="@+id/mypage_setting_leave_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="탈퇴하기"
                android:textSize="18sp"
                android:fontFamily="@font/font_pretendard_bold"
                android:textColor="@color/text_medium"
                app:layout_constraintStart_toEndOf="@+id/mypage_setting_leave_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="14dp"
                android:layout_marginVertical="22dp" />

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/mypage_goto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="14dp"
                android:layout_marginVertical="22dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>






    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>